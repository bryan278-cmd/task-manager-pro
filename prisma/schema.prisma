generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  low
  medium
  high
}

enum Category {
  bug
  feature
  chore
}

model Task {
  id        String   @id @default(uuid())
  title     String
  priority  Priority
  category  Category
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([priority])
  @@index([category])
  @@index([completed])
}
